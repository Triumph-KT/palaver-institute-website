# Palaver Institute Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME="Palaver Institute"
APP_VERSION="1.0.0"

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME="Palaver Institute"
NEXT_PUBLIC_CONTACT_EMAIL="info@palaverinstitute.org"

# =============================================================================
# BACKEND CONFIGURATION (FastAPI)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development (SQLite)
DATABASE_URL=sqlite:///./palaver_institute.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost/palaver_institute

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@palaverinstitute.org
SMTP_PASSWORD=your-app-password
FROM_EMAIL=info@palaverinstitute.org
