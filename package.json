{
  "name": "palaver-institute",
  "version": "1.0.0",
  "description": "Palaver Institute - Where African Minds Convene to Solve Global Challenges",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm run start",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && python -m pytest",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "db:init": "cd backend && python database/init_db.py",
    "db:migrate": "cd backend && alembic upgrade head",
    "db:seed": "cd backend && python database/seed_data.py"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "palaver-institute",
    "african-research",
    "indigenous-intelligence",
    "nextjs",
    "fastapi",
    "education",
    "research"
  ],
  "author": "Palaver Institute",
  "license": "MIT"
}
